<% title "Entrar" %>

<p>¿Todavía no tienes una cuenta? <%= link_to "Registrarme!", signup_path %></p>

<% form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Usuario o E-mail" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password, "Contraseña" %><br />
    <%= password_field_tag :password %>
  </p>

  <p><%= submit_tag "Entrar" %></p>
<% end %>
